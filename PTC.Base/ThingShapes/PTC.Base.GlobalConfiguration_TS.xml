            <ServiceImplementations>
                <ServiceImplementation
                 description=""
                 handlerName="Script"
                 name="AddGlobalManagerConfigurationEntry">
                    <ConfigurationTables>
                        <ConfigurationTable
                         dataShapeName=""
                         description=""
                         isMultiRow="false"
                         name="Script"
                         ordinal="0">
                            <DataShape>
                                <FieldDefinitions>
                                    <FieldDefinition
                                     baseType="STRING"
                                     description="code"
                                     name="code"
                                     ordinal="0"></FieldDefinition>
                                </FieldDefinitions>
                            </DataShape>
                            <Rows>
                                <Row>
                                    <code>
                                    <![CDATA[
                                    try {
                                        
                                        let rowToAdd = Resources["InfoTableFunctions"].CreateInfoTableFromDataShape({
                                            infoTableName : "InfoTable",
                                            dataShapeName : "PTC.Base.ManagerConfiguration"
                                        });
                                        
                                        rowToAdd.AddRow({
                                        	id:key,
                                            managerThingName:managerName
                                        });
                                        
                                        me.SetConfigurationTableRows({
                                            values: rowToAdd /* INFOTABLE */,
                                            persistent: true /* BOOLEAN */,
                                            tableName: "DefaultGlobalManagerConfiguration" /* STRING */
                                        });
                                        
                                    } catch (err) {
                                        logger.error("{} - {}:{} - {}", me.name, err.fileName, err.lineNumber, err);
                                        throw ("An error has occurred. Please check the script logs for more details.");
                                    }
                                    ]]>
                                    </code>
                                </Row>
                            </Rows>
                        </ConfigurationTable>
                    </ConfigurationTables>
                </ServiceImplementation>
                <ServiceImplementation
                 description=""
                 handlerName="Script"
                 name="GetAllGlobalDefaultManagers">
                    <ConfigurationTables>
                        <ConfigurationTable
                         dataShapeName=""
                         description=""
                         isMultiRow="false"
                         name="Script"
                         ordinal="0">
                            <DataShape>
                                <FieldDefinitions>
                                    <FieldDefinition
                                     baseType="STRING"
                                     description="code"
                                     name="code"
                                     ordinal="0"></FieldDefinition>
                                </FieldDefinitions>
                            </DataShape>
                            <Rows>
                                <Row>
                                    <code>
                                    <![CDATA[
                                    let result;
                                    try {
                                        result = me.GetConfigurationTable({
                                            tableName: "DefaultGlobalManagerConfiguration"
                                        });
                                    } catch (err) {
                                        logger.error("{} - {}:{} - {}", me.name, err.fileName, err.lineNumber, err);
                                        throw ("An error has occurred. Please check the script logs for more details.");
                                    }
                                    if (!result) {
                                        logger.warn("No Manager was found for identifier [{}]", uid);
                                    }
                                    ]]>
                                    </code>
                                </Row>
                            </Rows>
                        </ConfigurationTable>
                    </ConfigurationTables>
                </ServiceImplementation>
                <ServiceImplementation
                 description=""
                 handlerName="Script"
                 name="GetDefaultConfiguredSolutionName">
                    <ConfigurationTables>
                        <ConfigurationTable
                         dataShapeName=""
                         description=""
                         isMultiRow="false"
                         name="Script"
                         ordinal="0">
                            <DataShape>
                                <FieldDefinitions>
                                    <FieldDefinition
                                     baseType="STRING"
                                     description="code"
                                     name="code"
                                     ordinal="0"></FieldDefinition>
                                </FieldDefinitions>
                            </DataShape>
                            <Rows>
                                <Row>
                                    <code>
                                    <![CDATA[
                                    try {
                                        var result = me.GetConfigurationTable({
                                            tableName: "DefaultSolutionNameConfiguration" /* STRING */
                                        }).solutionName;
                                    } catch (err) {
                                        logger.error("{} - {}:{} - {}", me.name, err.fileName, err.lineNumber, err);
                                        throw ("An error has occurred. Please check the script logs for more details.");
                                    }
                                    ]]>
                                    </code>
                                </Row>
                            </Rows>
                        </ConfigurationTable>
                    </ConfigurationTables>
                </ServiceImplementation>
                <ServiceImplementation
                 description=""
                 handlerName="Script"
                 name="GetGlobalDefaultManagerForIdentifier">
                    <ConfigurationTables>
                        <ConfigurationTable
                         dataShapeName=""
                         description=""
                         isMultiRow="false"
                         name="Script"
                         ordinal="0">
                            <DataShape>
                                <FieldDefinitions>
                                    <FieldDefinition
                                     baseType="STRING"
                                     description="code"
                                     name="code"
                                     ordinal="0"></FieldDefinition>
                                </FieldDefinitions>
                            </DataShape>
                            <Rows>
                                <Row>
                                    <code>
                                    <![CDATA[
                                    let result = "";
                                    try {
                                        
                                        var mashupConfigTable = me.GetConfigurationTable({
                                            tableName: "DefaultGlobalManagerConfiguration" /* STRING */
                                        });
                                    
                                        if (mashupConfigTable && mashupConfigTable.rows.length > 0) {
                                            mashupConfigTable.rows.toArray().forEach(row => {
                                                if (row.id == uid) {
                                                    result = row.managerThingName;
                                                }
                                            });
                                        }
                                    } catch (err) {
                                        logger.error("{} - {}:{} - {}", me.name, err.fileName, err.lineNumber, err);
                                        throw ("An error has occurred. Please check the script logs for more details.");
                                    }
                                    if (!result) {
                                        logger.warn("No Manager was found for identifier [{}]", uid);
                                    }
                                    ]]>
                                    </code>
                                </Row>
                            </Rows>
                        </ConfigurationTable>
                    </ConfigurationTables>
                </ServiceImplementation>
